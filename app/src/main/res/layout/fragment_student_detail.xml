<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="4dp"
              tools:context=".Fragment.StudentDetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.v7.widget.CardView
            android:id="@+id/student_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/black"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/nameLabel"
                        style="@style/cardText"
                        android:layout_weight="1"
                        android:text="Name"
                        />

                    <TextView
                        android:id="@+id/student_name"
                        style="@style/reportText"
                        android:layout_weight="1"
                        android:text="Name"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/cardText"
                        android:layout_weight="1"
                        android:text="Registration Number"

                        />

                    <TextView
                        android:id="@+id/registration_number"
                        style="@style/reportText"
                        android:layout_weight="1"
                        android:text="Registration Number"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/cardText"
                        android:layout_weight="1"
                        android:text="Father Name"

                        />

                    <TextView
                        android:id="@+id/father_name"
                        style="@style/reportText"
                        android:layout_weight="1"
                        android:text="Father Name"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/cardText"
                        android:layout_weight="1"
                        android:text="Date of Birth"

                        />

                    <TextView
                        android:id="@+id/dob"
                        style="@style/reportText"
                        android:layout_weight="1"
                        android:text="Date of Birth"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/cardText"
                        android:layout_weight="1"
                        android:text="Email"

                        />

                    <TextView
                        android:id="@+id/email"
                        style="@style/reportText"
                        android:layout_weight="1"
                        android:text="Email"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/cardText"
                        android:layout_weight="1"
                        android:text="Section"

                        />

                    <TextView
                        android:id="@+id/section"
                        style="@style/reportText"
                        android:layout_weight="1"
                        android:text="section"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/cardText"
                        android:layout_weight="1"
                        android:text="Stream "

                        />

                    <TextView
                        android:id="@+id/stream"
                        style="@style/reportText"
                        android:layout_weight="1"
                        android:text="stream"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/cardText"
                        android:layout_weight="1"
                        android:text="Father Mobile Number"

                        />

                    <TextView
                        android:id="@+id/father_number"
                        style="@style/reportText"
                        android:layout_weight="1"
                        android:text="Father Mobile"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/cardText"
                        android:layout_weight="1"
                        android:text="Student Mobile Number"

                        />

                    <TextView
                        android:id="@+id/student_number"
                        style="@style/reportText"
                        android:layout_weight="1"
                        android:text="Student Number"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/cardText"
                        android:layout_weight="1"
                        android:text="State"

                        />

                    <TextView
                        android:id="@+id/state"
                        style="@style/reportText"
                        android:layout_weight="1"
                        android:text="State"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/cardText"
                        android:layout_weight="1"
                        android:text="Address"

                        />

                    <TextView
                        android:id="@+id/address"
                        style="@style/reportText"
                        android:layout_weight="1"
                        android:text="Address"
                        />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>

</LinearLayout>